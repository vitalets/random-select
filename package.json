{
  "name": "random-select",
  "description": "Select random items from list without repeats",
  "version": "0.1.1",
  "main": "dist/index.js",
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint src test --ext .ts",
    "test": "mocha -r ts-node/register test/setup.ts test/specs/*.ts",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "release": "npm run lint && npm t && npm run build && npm version $VER && npm publish && git push --follow-tags --no-verify",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": "eslint --ext .ts"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/debug": "^4.1.7",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.9",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-plugin-mocha": "^9.0.0",
    "lint-staged": "^11.2.3",
    "mocha": "^9.1.2",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
